@model IEnumerable<ToolBooking.Models.BookingDetail>
<h4>Sreach for BookingDetail</h4>
<hr />
@{
    var itemid = ViewBag.Message;
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="BookingForm">
            <div class="form-group">
                <label for="itemid" class="control-label"></label>
                <input name="itemid" value="@itemid" class="form-control" />
            </div>

            <div class="form-group">
                <label for="start_date" class="control-label"></label>
                <input name="start_date" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>




<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.uid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.itemid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.start_date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.uid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.itemid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.start_date)
                </td>

            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>

